# ===================================================================
# PORTFOLIO KPI COPILOT - PHASE 2 DEPLOYMENT CONFIGURATION
# Advanced AI Features + Natural Language Processing
# ===================================================================

# ===================================================================
# DEPLOYMENT PHASE CONTROL
# ===================================================================
DEPLOYMENT_PHASE=2
NODE_ENV=production

# ===================================================================
# CORE APPLICATION SETTINGS
# ===================================================================
NEXTAUTH_URL=https://portfolio-kpi-copilot.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ===================================================================
# DATABASE CONFIGURATION (SQLite for Phase 2)
# ===================================================================
# DATABASE_URL="file:./dev.db"  # DISABLED - Using Vercel env var

# Supabase (Still disabled for Phase 2)
USE_SUPABASE_PRIMARY=false
FALLBACK_TO_SQLITE=true
ENABLE_REALTIME_SUBSCRIPTIONS=false

# ===================================================================
# ENHANCED AI SERVICES CONFIGURATION (Phase 2)
# ===================================================================

# OpenRouter API (Primary AI Provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FALLBACK_MODEL=openai/gpt-4o

# OpenAI API (Backup AI Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# Advanced AI Configuration
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_AI_MODEL=openai/gpt-4o
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_RATE_LIMIT_PER_MINUTE=50
AI_RATE_LIMIT_PER_HOUR=500

# Streaming and Advanced Features
ENABLE_STREAMING_RESPONSES=true
AI_STREAM_TIMEOUT=30000
AI_CONFIDENCE_THRESHOLD=70

# ===================================================================
# FEATURE FLAGS (Phase 2)
# ===================================================================

# Core Features (Always Enabled)
ENABLE_PORTFOLIO_MANAGEMENT=true
ENABLE_KPI_TRACKING=true
ENABLE_BASIC_AUTH=true
ENABLE_DASHBOARD=true

# Phase 1 AI Features (Enabled)
ENABLE_AI_INSIGHTS=true
ENABLE_BASIC_AI_EXPLANATIONS=true
ENABLE_OPENROUTER_INTEGRATION=true

# Phase 2 AI Features (NEW - ENABLED)
ENABLE_NATURAL_LANGUAGE_QUERIES=true
ENABLE_ADVANCED_AI_ORCHESTRATOR=true
ENABLE_STREAMING_RESPONSES=true
ENABLE_AI_ANALYTICS=true

# Phase 3+ Features (Still Disabled)
ENABLE_FINANCIAL_DATA_API=false
ENABLE_MARKET_DATA_INTEGRATION=false
ENABLE_ECONOMIC_INDICATORS=false
ENABLE_INDUSTRY_BENCHMARKS=false

# Phase 4+ Features (Still Disabled)
ENABLE_SUPABASE_MIGRATION=false
ENABLE_REALTIME_UPDATES=false
ENABLE_VECTOR_SEARCH=false
ENABLE_ADVANCED_QUERIES=false

# Phase 5+ Features (Still Disabled)
ENABLE_RBAC=false
ENABLE_AUDIT_LOGGING=false
ENABLE_ADVANCED_SECURITY=false
ENABLE_PERFORMANCE_MONITORING=false

# Phase 6+ Features (Still Disabled)
ENABLE_DOCUMENT_UPLOAD=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_CUSTOM_DASHBOARDS=false
ENABLE_WEBHOOKS=false

# ===================================================================
# NATURAL LANGUAGE PROCESSING (Phase 2)
# ===================================================================

# NLP Configuration
NLP_CONFIDENCE_THRESHOLD=70
NLP_MAX_QUERY_LENGTH=500
NLP_CACHE_TTL=1800
ENABLE_QUERY_SUGGESTIONS=true
ENABLE_INTENT_RECOGNITION=true
ENABLE_ENTITY_EXTRACTION=true

# Supported Query Types
ENABLE_SEARCH_QUERIES=true
ENABLE_ANALYSIS_QUERIES=true
ENABLE_COMPARISON_QUERIES=true
ENABLE_FORECAST_QUERIES=true
ENABLE_BENCHMARK_QUERIES=true

# ===================================================================
# AI ANALYTICS & INSIGHTS (Phase 2)
# ===================================================================

# AI Analytics Configuration
ENABLE_AI_USAGE_TRACKING=true
ENABLE_AI_PERFORMANCE_METRICS=true
ENABLE_AI_COST_TRACKING=true
ENABLE_AI_QUALITY_SCORING=true

# Insight Generation
ENABLE_AUTOMATED_INSIGHTS=true
ENABLE_TREND_ANALYSIS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_RECOMMENDATION_ENGINE=true

# ===================================================================
# MOCK FINANCIAL DATA (Phase 2)
# ===================================================================

# Still using mock data for Phase 2
MOCK_EXTERNAL_APIS=true
ENABLE_YAHOO_FINANCE=false

# Financial Data Providers (Still disabled)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
# IEX_CLOUD_API_KEY=your-iex-cloud-api-key
# POLYGON_API_KEY=your-polygon-api-key
# FMP_API_KEY=your-fmp-api-key

# ===================================================================
# ENHANCED CACHING & PERFORMANCE (Phase 2)
# ===================================================================

# Redis (Still disabled for Phase 2)
ENABLE_REDIS_CACHE=false
CACHE_DEFAULT_TTL=300

# AI Response Caching
ENABLE_AI_RESPONSE_CACHING=true
AI_CACHE_TTL=1800
AI_CACHE_MAX_SIZE=1000

# Performance Monitoring (Enhanced)
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
API_TIMEOUT=30000
AI_TIMEOUT=30000

# ===================================================================
# ENHANCED SECURITY & RATE LIMITING (Phase 2)
# ===================================================================

# Security Headers (Enhanced)
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=https://portfolio-kpi-copilot.vercel.app

# Enhanced Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI-specific Rate Limiting
AI_RATE_LIMIT_WINDOW=60000
AI_RATE_LIMIT_MAX_REQUESTS=20
NLP_RATE_LIMIT_MAX_REQUESTS=30

# ===================================================================
# OAUTH PROVIDERS (Same as Phase 1)
# ===================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===================================================================
# ENHANCED MONITORING & LOGGING (Phase 2)
# ===================================================================

# Application Monitoring (Enhanced)
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS_COLLECTION=true

# Logging Configuration (Enhanced)
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_AI_REQUEST_LOGGING=true

# AI-specific Monitoring
ENABLE_AI_PERFORMANCE_TRACKING=true
ENABLE_AI_ERROR_TRACKING=true
ENABLE_AI_USAGE_ANALYTICS=true

# ===================================================================
# DEVELOPMENT & DEBUGGING (Disabled for Production)
# ===================================================================

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_API_DOCUMENTATION=true
ENABLE_DEVELOPMENT_TOOLS=false

# Testing Configuration
ENABLE_TEST_DATA=false
BYPASS_AUTHENTICATION=false

# ===================================================================
# DEPLOYMENT CONFIGURATION
# ===================================================================

# Vercel Deployment
VERCEL_ENV=production

# Performance
ENABLE_STATIC_OPTIMIZATION=true

# ===================================================================
# COMPLIANCE & PRIVACY (Enhanced)
# ===================================================================

# Data Privacy
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# AI Data Privacy
ENABLE_AI_DATA_ANONYMIZATION=true
AI_DATA_RETENTION_DAYS=30

# ===================================================================
# NOTIFICATIONS & ALERTS (Basic)
# ===================================================================

# Email Configuration (Still disabled)
ENABLE_EMAIL_NOTIFICATIONS=false

# AI Alerts
ENABLE_AI_ERROR_ALERTS=true
ENABLE_AI_PERFORMANCE_ALERTS=true

# ===================================================================
# INTEGRATION SETTINGS (Still disabled)
# ===================================================================

# Webhook Configuration (Still disabled)
ENABLE_WEBHOOKS=false
ENABLE_THIRD_PARTY_INTEGRATIONS=false

