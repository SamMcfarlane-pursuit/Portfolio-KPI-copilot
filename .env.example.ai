# Portfolio KPI Copilot - AI Integration Environment Variables
# Copy this to .env.local and fill in your actual values

# OpenRouter API Configuration (Primary AI Provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Alternative: Direct OpenAI API (if not using OpenRouter)
OPENAI_API_KEY=your_openai_api_key_here

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=portfolio-kpi-copilot

# Application Configuration
NEXT_PUBLIC_APP_URL=http://kpi-copilot.local:3002
NEXT_PUBLIC_APP_NAME=Portfolio KPI Copilot

# AI Model Configuration
DEFAULT_AI_MODEL=openai/gpt-4o
FALLBACK_AI_MODEL=openai/gpt-3.5-turbo
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1000

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=10
AI_RATE_LIMIT_PER_HOUR=100

# Feature Flags
ENABLE_AI_EXPLANATIONS=true
ENABLE_RAG_INTEGRATION=false
ENABLE_QUERY_ANALYTICS=true
ENABLE_FEEDBACK_COLLECTION=true

# Vector Database (Future RAG Implementation)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=kpi-knowledge-base

# Supabase Configuration (for analytics and storage)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Analytics and Monitoring
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_RETENTION_DAYS=90

# Security
AI_API_RATE_LIMIT_BYPASS_KEY=your_bypass_key_for_admin_users
ENABLE_CONTENT_FILTERING=true

# Development/Debug Settings
DEBUG_AI_PROMPTS=false
LOG_AI_RESPONSES=false
MOCK_AI_RESPONSES=false
