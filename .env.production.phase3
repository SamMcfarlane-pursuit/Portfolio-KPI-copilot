# ===================================================================
# PORTFOLIO KPI COPILOT - PHASE 3 DEPLOYMENT CONFIGURATION
# Financial Data Integration + Real Market Data
# ===================================================================

# ===================================================================
# DEPLOYMENT PHASE CONTROL
# ===================================================================
DEPLOYMENT_PHASE=3
NODE_ENV=production

# ===================================================================
# CORE APPLICATION SETTINGS
# ===================================================================
NEXTAUTH_URL=https://portfolio-kpi-copilot.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ===================================================================
# DATABASE CONFIGURATION (SQLite for Phase 3)
# ===================================================================
DATABASE_URL="file:./dev.db"

# Supabase (Still disabled for Phase 3)
USE_SUPABASE_PRIMARY=false
FALLBACK_TO_SQLITE=true
ENABLE_REALTIME_SUBSCRIPTIONS=false

# ===================================================================
# AI SERVICES CONFIGURATION (Phase 3 - Same as Phase 2)
# ===================================================================

# OpenRouter API (Primary AI Provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FALLBACK_MODEL=openai/gpt-4o

# OpenAI API (Backup AI Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# Advanced AI Configuration
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_AI_MODEL=openai/gpt-4o
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_RATE_LIMIT_PER_MINUTE=50
AI_RATE_LIMIT_PER_HOUR=500

# ===================================================================
# FEATURE FLAGS (Phase 3)
# ===================================================================

# Core Features (Always Enabled)
ENABLE_PORTFOLIO_MANAGEMENT=true
ENABLE_KPI_TRACKING=true
ENABLE_BASIC_AUTH=true
ENABLE_DASHBOARD=true

# Phase 1 AI Features (Enabled)
ENABLE_AI_INSIGHTS=true
ENABLE_BASIC_AI_EXPLANATIONS=true
ENABLE_OPENROUTER_INTEGRATION=true

# Phase 2 AI Features (Enabled)
ENABLE_NATURAL_LANGUAGE_QUERIES=true
ENABLE_ADVANCED_AI_ORCHESTRATOR=true
ENABLE_STREAMING_RESPONSES=true
ENABLE_AI_ANALYTICS=true

# Phase 3 Financial Data Features (NEW - ENABLED)
ENABLE_FINANCIAL_DATA_API=true
ENABLE_MARKET_DATA_INTEGRATION=true
ENABLE_ECONOMIC_INDICATORS=true
ENABLE_INDUSTRY_BENCHMARKS=true

# Phase 4+ Features (Still Disabled)
ENABLE_SUPABASE_MIGRATION=false
ENABLE_REALTIME_UPDATES=false
ENABLE_VECTOR_SEARCH=false
ENABLE_ADVANCED_QUERIES=false

# Phase 5+ Features (Still Disabled)
ENABLE_RBAC=false
ENABLE_AUDIT_LOGGING=false
ENABLE_ADVANCED_SECURITY=false
ENABLE_PERFORMANCE_MONITORING=false

# Phase 6+ Features (Still Disabled)
ENABLE_DOCUMENT_UPLOAD=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_CUSTOM_DASHBOARDS=false
ENABLE_WEBHOOKS=false

# ===================================================================
# FINANCIAL DATA PROVIDERS (Phase 3 - REAL APIs)
# ===================================================================

# Alpha Vantage (Economic Data, News, Basic Market Data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# IEX Cloud (Real-time Market Data)
IEX_CLOUD_API_KEY=your-iex-cloud-api-key

# Polygon.io (Market Data, Options, Forex)
POLYGON_API_KEY=your-polygon-api-key

# Financial Modeling Prep (Financial Statements, Ratios)
FMP_API_KEY=your-fmp-api-key

# Yahoo Finance (Backup/Free Data)
ENABLE_YAHOO_FINANCE=true

# Financial Data Configuration
MOCK_EXTERNAL_APIS=false
ENABLE_FINANCIAL_DATA_FALLBACK=true
ENABLE_MOCK_DATA_FALLBACK=true

# ===================================================================
# FINANCIAL DATA SERVICE CONFIGURATION
# ===================================================================

# Provider Priority Order
FINANCIAL_DATA_PRIMARY_PROVIDER=iexcloud
FINANCIAL_DATA_SECONDARY_PROVIDER=alphavantage
FINANCIAL_DATA_TERTIARY_PROVIDER=polygon

# Rate Limiting (Per Provider)
ALPHA_VANTAGE_RATE_LIMIT=5
IEX_CLOUD_RATE_LIMIT=100
POLYGON_RATE_LIMIT=5
FMP_RATE_LIMIT=250

# Timeouts and Retries
FINANCIAL_DATA_TIMEOUT=10000
FINANCIAL_DATA_RETRY_ATTEMPTS=3
FINANCIAL_DATA_CACHE_TTL=300

# Data Types Configuration
ENABLE_MARKET_DATA=true
ENABLE_ECONOMIC_DATA=true
ENABLE_NEWS_DATA=true
ENABLE_BENCHMARK_DATA=true
ENABLE_REIT_DATA=true
ENABLE_COMMODITY_DATA=true
ENABLE_CURRENCY_DATA=true
ENABLE_SENTIMENT_ANALYSIS=true

# ===================================================================
# ENHANCED CACHING & PERFORMANCE (Phase 3)
# ===================================================================

# Redis (Still disabled for Phase 3)
ENABLE_REDIS_CACHE=false
CACHE_DEFAULT_TTL=300

# Financial Data Caching
ENABLE_FINANCIAL_DATA_CACHING=true
MARKET_DATA_CACHE_TTL=60
ECONOMIC_DATA_CACHE_TTL=3600
NEWS_DATA_CACHE_TTL=900
BENCHMARK_DATA_CACHE_TTL=86400

# AI Response Caching
ENABLE_AI_RESPONSE_CACHING=true
AI_CACHE_TTL=1800
AI_CACHE_MAX_SIZE=1000

# Performance Monitoring (Enhanced)
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
API_TIMEOUT=30000
FINANCIAL_API_TIMEOUT=10000

# ===================================================================
# ENHANCED SECURITY & RATE LIMITING (Phase 3)
# ===================================================================

# Security Headers (Enhanced)
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=https://portfolio-kpi-copilot.vercel.app

# Enhanced Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Financial Data Rate Limiting
FINANCIAL_DATA_RATE_LIMIT_WINDOW=60000
FINANCIAL_DATA_RATE_LIMIT_MAX_REQUESTS=100

# AI-specific Rate Limiting
AI_RATE_LIMIT_WINDOW=60000
AI_RATE_LIMIT_MAX_REQUESTS=20
NLP_RATE_LIMIT_MAX_REQUESTS=30

# ===================================================================
# INDUSTRY BENCHMARKS & STANDARDS (Phase 3)
# ===================================================================

# Benchmark Data Sources
ENABLE_DOMO_BENCHMARKS=true
ENABLE_QLIK_BENCHMARKS=true
ENABLE_CLEARPOINT_BENCHMARKS=true

# Real Estate Investment Benchmarks
ENABLE_REIT_BENCHMARKS=true
ENABLE_REAL_ESTATE_KPIS=true

# Financial Analysis Standards
ENABLE_BLOOMBERG_STANDARDS=true
ENABLE_REUTERS_STANDARDS=true
ENABLE_MORNINGSTAR_STANDARDS=true

# Industry Categories
ENABLE_TECH_BENCHMARKS=true
ENABLE_HEALTHCARE_BENCHMARKS=true
ENABLE_FINTECH_BENCHMARKS=true
ENABLE_SAAS_BENCHMARKS=true

# ===================================================================
# OAUTH PROVIDERS (Same as Previous Phases)
# ===================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===================================================================
# ENHANCED MONITORING & LOGGING (Phase 3)
# ===================================================================

# Application Monitoring (Enhanced)
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS_COLLECTION=true

# Logging Configuration (Enhanced)
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_AI_REQUEST_LOGGING=true

# Financial Data Monitoring
ENABLE_FINANCIAL_DATA_MONITORING=true
ENABLE_FINANCIAL_DATA_ERROR_TRACKING=true
ENABLE_FINANCIAL_DATA_USAGE_ANALYTICS=true
ENABLE_FINANCIAL_DATA_COST_TRACKING=true

# Provider Health Monitoring
ENABLE_PROVIDER_HEALTH_CHECKS=true
PROVIDER_HEALTH_CHECK_INTERVAL=300000
ENABLE_PROVIDER_FAILOVER=true

# ===================================================================
# DEVELOPMENT & DEBUGGING (Disabled for Production)
# ===================================================================

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_API_DOCUMENTATION=true
ENABLE_DEVELOPMENT_TOOLS=false

# Testing Configuration
ENABLE_TEST_DATA=false
BYPASS_AUTHENTICATION=false

# ===================================================================
# DEPLOYMENT CONFIGURATION
# ===================================================================

# Vercel Deployment
VERCEL_ENV=production

# Performance
ENABLE_STATIC_OPTIMIZATION=true

# ===================================================================
# COMPLIANCE & PRIVACY (Enhanced)
# ===================================================================

# Data Privacy
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# Financial Data Privacy
ENABLE_FINANCIAL_DATA_ANONYMIZATION=true
FINANCIAL_DATA_RETENTION_DAYS=90

# AI Data Privacy
ENABLE_AI_DATA_ANONYMIZATION=true
AI_DATA_RETENTION_DAYS=30

# ===================================================================
# NOTIFICATIONS & ALERTS (Enhanced)
# ===================================================================

# Email Configuration (Still disabled)
ENABLE_EMAIL_NOTIFICATIONS=false

# Financial Data Alerts
ENABLE_FINANCIAL_DATA_ERROR_ALERTS=true
ENABLE_FINANCIAL_DATA_QUOTA_ALERTS=true
ENABLE_PROVIDER_OUTAGE_ALERTS=true

# AI Alerts
ENABLE_AI_ERROR_ALERTS=true
ENABLE_AI_PERFORMANCE_ALERTS=true

# ===================================================================
# INTEGRATION SETTINGS (Still disabled)
# ===================================================================

# Webhook Configuration (Still disabled)
ENABLE_WEBHOOKS=false
ENABLE_THIRD_PARTY_INTEGRATIONS=false

