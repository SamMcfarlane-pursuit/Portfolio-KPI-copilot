# Database Configuration
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production"

# AI Integration - Advanced Analytics Engine
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:latest"
ENABLE_OLLAMA="true"

# OpenRouter Configuration (Production AI)
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
OPENROUTER_DEFAULT_MODEL="anthropic/claude-3.5-sonnet"
OPENROUTER_FALLBACK_MODEL="openai/gpt-4o"

# OpenAI Configuration (Fallback)
OPENAI_API_KEY="your-openai-api-key"
DISABLE_OPENAI="false"

# AI Feature Flags
ENABLE_ADVANCED_ANALYTICS="true"
ENABLE_PREDICTIVE_MODELING="true"
ENABLE_AI_ORCHESTRATION="true"
DEFAULT_AI_PROVIDER="auto"

# Optional: Additional AI APIs
# ANTHROPIC_API_KEY="your-anthropic-key"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Supabase Configuration (Production-Ready)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Supabase Feature Flags
USE_SUPABASE_PRIMARY="true"
FALLBACK_TO_SQLITE="true"
ENABLE_REALTIME_SUBSCRIPTIONS="true"
ENABLE_VECTOR_SEARCH="true"

# Optional: Production Database (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/portfolio_kpi_copilot"

# Optional: Redis for Caching
# REDIS_URL="redis://localhost:6379"

# Optional: File Upload Configuration
# MAX_FILE_SIZE="10485760"  # 10MB in bytes
# UPLOAD_DIR="./uploads"
