# Portfolio KPI Copilot - Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Application URLs
NEXTAUTH_URL=https://portfolio-kpi-copilot.vercel.app
NEXT_PUBLIC_APP_URL=https://portfolio-kpi-copilot.vercel.app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (Supabase)
DATABASE_URL=postgresql://username:password@host:port/database
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Pool Configuration
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-here
NEXTAUTH_JWT_SECRET=your-jwt-secret-key-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Additional OAuth Providers (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Security Configuration
REQUEST_SIGNING_SECRET=your-request-signing-secret
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=https://portfolio-kpi-copilot.vercel.app

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# OpenRouter API (Primary AI Provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI API (Backup Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-organization-id

# Ollama Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# AI Configuration
AI_DEFAULT_MODEL=anthropic/claude-3-sonnet
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30000

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis Configuration (Production Caching)
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your-redis-password
REDIS_DATABASE=0
REDIS_KEY_PREFIX=portfolio-kpi:
REDIS_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=portfolio-kpi-copilot
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
ANALYTICS_ID=your-analytics-id

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Portfolio-KPI-Copilot

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@portfolio-kpi-copilot.com

# File Storage (AWS S3 or Vercel Blob)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=portfolio-kpi-uploads

# Alternative: Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_FRAME_OPTIONS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_MULTI_TENANT=true

# Beta Features
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_AI=false

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Debug Settings (Disable in Production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEBUG_ROUTES=false

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Application Limits
MAX_COMPANIES_PER_USER=100
MAX_FILE_UPLOAD_SIZE=10485760
MAX_REQUEST_SIZE=10485760

# Subscription & Billing (if applicable)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# NOTIFICATIONS & WEBHOOKS
# =============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/your-webhook

# =============================================================================
# DEPLOYMENT & CI/CD
# =============================================================================

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# GitHub Actions
GITHUB_TOKEN=your-github-token

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=portfolio-kpi-backups

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Compliance Settings
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_RETENTION=true
DATA_RETENTION_DAYS=2555
ENABLE_GDPR_COMPLIANCE=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_PRIVATE_STANDALONE=true

# Node.js Configuration
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=128

# =============================================================================
# CUSTOM BUSINESS LOGIC
# =============================================================================

# Portfolio Analysis Settings
DEFAULT_ANALYSIS_PERIOD=quarterly
ENABLE_SECTOR_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_PERFORMANCE_BENCHMARKING=true

# KPI Configuration
DEFAULT_KPI_REFRESH_INTERVAL=300000
ENABLE_REAL_TIME_KPI_UPDATES=true
MAX_KPI_HISTORY_MONTHS=24

