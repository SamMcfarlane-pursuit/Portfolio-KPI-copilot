# ===================================================================
# PORTFOLIO KPI COPILOT - PHASE 1 DEPLOYMENT CONFIGURATION
# Core AI Features + Basic Financial Data Integration
# ===================================================================

# ===================================================================
# DEPLOYMENT PHASE CONTROL
# ===================================================================
DEPLOYMENT_PHASE=1
NODE_ENV=production

# ===================================================================
# CORE APPLICATION SETTINGS
# ===================================================================
NEXTAUTH_URL=https://portfolio-kpi-copilot.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ===================================================================
# DATABASE CONFIGURATION (SQLite for Phase 1)
# ===================================================================
DATABASE_URL="file:./dev.db"

# Supabase (Disabled for Phase 1)
USE_SUPABASE_PRIMARY=false
FALLBACK_TO_SQLITE=true
ENABLE_REALTIME_SUBSCRIPTIONS=false

# ===================================================================
# AI SERVICES CONFIGURATION (Phase 1 - Basic AI)
# ===================================================================

# OpenRouter API (Primary AI Provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# OpenAI API (Backup AI Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# AI Service Configuration
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_AI_MODEL=openai/gpt-4o
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000

# ===================================================================
# FEATURE FLAGS (Phase 1)
# ===================================================================

# Core Features (Always Enabled)
ENABLE_PORTFOLIO_MANAGEMENT=true
ENABLE_KPI_TRACKING=true
ENABLE_BASIC_AUTH=true
ENABLE_DASHBOARD=true

# Phase 1 AI Features
ENABLE_AI_INSIGHTS=true
ENABLE_BASIC_AI_EXPLANATIONS=true
ENABLE_OPENROUTER_INTEGRATION=true

# Phase 2+ Features (Disabled)
ENABLE_NATURAL_LANGUAGE_QUERIES=false
ENABLE_ADVANCED_AI_ORCHESTRATOR=false
ENABLE_STREAMING_RESPONSES=false
ENABLE_AI_ANALYTICS=false

# Phase 3+ Features (Disabled)
ENABLE_FINANCIAL_DATA_API=false
ENABLE_MARKET_DATA_INTEGRATION=false
ENABLE_ECONOMIC_INDICATORS=false
ENABLE_INDUSTRY_BENCHMARKS=false

# Phase 4+ Features (Disabled)
ENABLE_SUPABASE_MIGRATION=false
ENABLE_REALTIME_UPDATES=false
ENABLE_VECTOR_SEARCH=false
ENABLE_ADVANCED_QUERIES=false

# Phase 5+ Features (Disabled)
ENABLE_RBAC=false
ENABLE_AUDIT_LOGGING=false
ENABLE_ADVANCED_SECURITY=false
ENABLE_PERFORMANCE_MONITORING=false

# Phase 6+ Features (Disabled)
ENABLE_DOCUMENT_UPLOAD=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_CUSTOM_DASHBOARDS=false
ENABLE_WEBHOOKS=false

# ===================================================================
# BASIC FINANCIAL DATA (Mock Data for Phase 1)
# ===================================================================

# Use mock data instead of real APIs for Phase 1
MOCK_EXTERNAL_APIS=true
ENABLE_YAHOO_FINANCE=false

# Financial Data Providers (Disabled for Phase 1)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
# IEX_CLOUD_API_KEY=your-iex-cloud-api-key
# POLYGON_API_KEY=your-polygon-api-key
# FMP_API_KEY=your-fmp-api-key

# ===================================================================
# CACHING & PERFORMANCE (Basic for Phase 1)
# ===================================================================

# Redis (Disabled for Phase 1)
ENABLE_REDIS_CACHE=false
CACHE_DEFAULT_TTL=300

# Performance Monitoring (Basic)
ENABLE_PERFORMANCE_MONITORING=false
SLOW_QUERY_THRESHOLD=1000
API_TIMEOUT=30000

# ===================================================================
# SECURITY & RATE LIMITING (Basic)
# ===================================================================

# Security Headers (Basic)
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=https://portfolio-kpi-copilot.vercel.app

# Rate Limiting (Basic)
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# OAUTH PROVIDERS (Basic)
# ===================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===================================================================
# MONITORING & LOGGING (Basic)
# ===================================================================

# Application Monitoring (Basic)
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_TRACKING=true

# ===================================================================
# DEVELOPMENT & DEBUGGING (Disabled for Production)
# ===================================================================

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_API_DOCUMENTATION=true
ENABLE_DEVELOPMENT_TOOLS=false

# Testing Configuration
ENABLE_TEST_DATA=false
BYPASS_AUTHENTICATION=false

# ===================================================================
# DEPLOYMENT CONFIGURATION
# ===================================================================

# Vercel Deployment
VERCEL_ENV=production

# Performance
ENABLE_STATIC_OPTIMIZATION=true

# ===================================================================
# COMPLIANCE & PRIVACY (Basic)
# ===================================================================

# Data Privacy
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# ===================================================================
# NOTIFICATIONS & ALERTS (Disabled for Phase 1)
# ===================================================================

# Email Configuration (Disabled)
ENABLE_EMAIL_NOTIFICATIONS=false

# ===================================================================
# INTEGRATION SETTINGS (Disabled for Phase 1)
# ===================================================================

# Webhook Configuration (Disabled)
ENABLE_WEBHOOKS=false
ENABLE_THIRD_PARTY_INTEGRATIONS=false

# ===================================================================
# PHASE 1 DEPLOYMENT NOTES
# ===================================================================

# This configuration enables:
# ✅ Core portfolio and KPI management
# ✅ Basic AI explanations and insights
# ✅ OpenRouter/OpenAI integration
# ✅ Basic authentication and security
# ✅ SQLite database (reliable and simple)
# ✅ Mock financial data (no external API dependencies)
# ✅ Basic health monitoring
# ✅ Essential security headers

# Disabled for Phase 1:
# ❌ Advanced AI features (natural language, streaming)
# ❌ Real financial data APIs
# ❌ Supabase migration
# ❌ Advanced security and monitoring
# ❌ Document upload and processing
# ❌ Real-time features

# Next Phase Preparation:
# - Set up financial data provider API keys
# - Configure Supabase instance
# - Test advanced AI features
# - Implement comprehensive monitoring

# ===================================================================
# END OF PHASE 1 CONFIGURATION
# ===================================================================
