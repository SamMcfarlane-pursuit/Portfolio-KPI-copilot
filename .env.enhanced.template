# ===================================================================
# ENHANCED PORTFOLIO KPI COPILOT - COMPREHENSIVE CONFIGURATION
# ===================================================================

# ===================================================================
# CORE APPLICATION SETTINGS
# ===================================================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================

# Primary Database (SQLite for development, Supabase for production)
DATABASE_URL="file:./dev.db"

# Supabase Configuration (Primary Database for Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Migration Settings
USE_SUPABASE_PRIMARY=false
FALLBACK_TO_SQLITE=true
ENABLE_REALTIME_SUBSCRIPTIONS=false
ENABLE_VECTOR_SEARCH=false

# Database Performance
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_QUERY_CACHE_TTL=300

# ===================================================================
# AI SERVICES CONFIGURATION
# ===================================================================

# OpenRouter API (Primary AI Provider)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FALLBACK_MODEL=openai/gpt-4o

# OpenAI API (Backup AI Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
DISABLE_OPENAI=false

# Ollama (Local AI Processing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_TIMEOUT=30000

# AI Service Configuration
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_AI_MODEL=openai/gpt-4o
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_RATE_LIMIT_PER_MINUTE=20
AI_RATE_LIMIT_PER_HOUR=200

# AI Feature Flags
ENABLE_AI_EXPLANATIONS=true
ENABLE_RAG_INTEGRATION=false
ENABLE_QUERY_ANALYTICS=true
ENABLE_FEEDBACK_COLLECTION=true
ENABLE_STREAMING_RESPONSES=true
ENABLE_NATURAL_LANGUAGE_QUERIES=true

# ===================================================================
# FINANCIAL DATA PROVIDERS
# ===================================================================

# Alpha Vantage (Economic Data, News, Basic Market Data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# IEX Cloud (Real-time Market Data)
IEX_CLOUD_API_KEY=your-iex-cloud-api-key

# Polygon.io (Market Data, Options, Forex)
POLYGON_API_KEY=your-polygon-api-key

# Financial Modeling Prep (Financial Statements, Ratios)
FMP_API_KEY=your-fmp-api-key

# Yahoo Finance (Backup/Free Data)
ENABLE_YAHOO_FINANCE=true

# ===================================================================
# CACHING & PERFORMANCE
# ===================================================================

# Redis Configuration (Primary Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TIMEOUT=5000

# Cache Settings
ENABLE_REDIS_CACHE=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=3600

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
API_TIMEOUT=30000

# ===================================================================
# SECURITY & RATE LIMITING
# ===================================================================

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Security
API_KEY_HEADER=X-API-Key
ENABLE_API_KEY_AUTH=false
API_RATE_LIMIT_PER_KEY=1000

# ===================================================================
# OAUTH PROVIDERS
# ===================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===================================================================
# VECTOR DATABASE & RAG
# ===================================================================

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=kpi-knowledge-base

# Weaviate (Alternative Vector Database)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===================================================================
# FILE STORAGE & UPLOADS
# ===================================================================

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,xlsx,csv,docx,txt
UPLOAD_PATH=./uploads

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# ===================================================================
# MONITORING & LOGGING
# ===================================================================

# Application Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS_COLLECTION=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# External Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ===================================================================
# FEATURE FLAGS
# ===================================================================

# Core Features
ENABLE_PORTFOLIO_MANAGEMENT=true
ENABLE_KPI_TRACKING=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_REAL_TIME_UPDATES=true

# Advanced Features
ENABLE_AI_INSIGHTS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_BENCHMARK_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true

# Experimental Features
ENABLE_NATURAL_LANGUAGE_INTERFACE=true
ENABLE_AUTOMATED_REPORTING=false
ENABLE_INTEGRATION_WEBHOOKS=false
ENABLE_CUSTOM_DASHBOARDS=false

# ===================================================================
# DEVELOPMENT & DEBUGGING
# ===================================================================

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_API_DOCUMENTATION=true
ENABLE_DEVELOPMENT_TOOLS=true

# Testing Configuration
ENABLE_TEST_DATA=true
MOCK_EXTERNAL_APIS=false
BYPASS_AUTHENTICATION=false

# ===================================================================
# DEPLOYMENT CONFIGURATION
# ===================================================================

# Vercel Deployment
VERCEL_URL=your-vercel-url
VERCEL_ENV=development

# Custom Domain
CUSTOM_DOMAIN=your-custom-domain.com
ENABLE_HTTPS_REDIRECT=true

# CDN Configuration
CDN_URL=your-cdn-url
ENABLE_STATIC_OPTIMIZATION=true

# ===================================================================
# BACKUP & RECOVERY
# ===================================================================

# Database Backup
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Data Export
ENABLE_DATA_EXPORT=true
EXPORT_FORMATS=json,csv,xlsx

# ===================================================================
# COMPLIANCE & PRIVACY
# ===================================================================

# Data Privacy
ENABLE_GDPR_COMPLIANCE=true
ENABLE_DATA_ANONYMIZATION=false
DATA_RETENTION_DAYS=365

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# ===================================================================
# NOTIFICATIONS & ALERTS
# ===================================================================

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Alert Thresholds
PERFORMANCE_ALERT_THRESHOLD=5000
ERROR_RATE_ALERT_THRESHOLD=0.05
UPTIME_ALERT_THRESHOLD=0.99

# ===================================================================
# INTEGRATION SETTINGS
# ===================================================================

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10000

# API Integration
ENABLE_THIRD_PARTY_INTEGRATIONS=false
INTEGRATION_RATE_LIMIT=100

# ===================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ===================================================================

# Production Overrides (uncomment for production)
# NODE_ENV=production
# USE_SUPABASE_PRIMARY=true
# ENABLE_REALTIME_SUBSCRIPTIONS=true
# ENABLE_REDIS_CACHE=true
# ENABLE_SECURITY_HEADERS=true
# ENABLE_RATE_LIMITING=true
# LOG_LEVEL=warn
# ENABLE_DEBUG_MODE=false

# ===================================================================
# END OF CONFIGURATION
# ===================================================================
